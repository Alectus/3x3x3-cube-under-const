const int pinArray0[] ={2, 3, 4, 5, 6, 7, 8, 9, 10};

const int pinArray1[] ={3, 4, 5, 6, 7, 8, 9, 10};

const int pinArray2[] ={2, 4, 5, 6, 7, 8, 9, 10};

const int pinArray3[] ={2, 3, 5, 6, 7, 8, 9, 10};

const int pinArray4[] ={2, 3, 4, 6, 7, 8, 9, 10};

const int pinArray5[] ={2, 3, 3, 5, 7, 8, 9, 10};

const int pinArray6[] ={2, 3, 4, 5, 6, 8, 9, 10};

const int pinArray7[] ={2, 3, 4, 5, 6, 7, 9, 10};

const int pinArray8[] ={2, 3, 4, 5, 6, 7, 8, 10};

const int pinArray9[] ={2, 3, 4, 5, 6, 7, 8, 9};

int ledState   = 0;

int count      = 0;

const int timer      = 30;

const int t200       = 200;

const int t500       = 500;

long randNumber;

//all pins to output//

void setup()

 {

 for (int i = 2; i <= 13; i++)

 {

  pinMode(i, OUTPUT);

 }

 for (int i = 11; i <= 13; i++)

 {

  digitalWrite(i, HIGH);

 }

}

void Led(int r)

{

  ledState = digitalRead(r);

   

 if (ledState == HIGH)

 {

  digitalWrite(r, LOW);

 }

 else

 {

  digitalWrite(r, HIGH);

 }

}

//Kolom(pinnumber) sets 1 high 8 low//

void Kolom(int number)

 {

 switch (number) 

 {

 case 1:

  digitalWrite(2, HIGH);

  digitalWrite(pinArray1[8], LOW);

 break;

 case 2:

  digitalWrite(3, HIGH);

  digitalWrite(pinArray2[8], LOW);

 break;

 case 3:

  digitalWrite(4, HIGH);

  digitalWrite(pinArray3[8], LOW);

 case 4:

  digitalWrite(5, HIGH);

  digitalWrite(pinArray4[8], LOW);

 break;

 case 5:

  digitalWrite(6, HIGH);

  digitalWrite(pinArray5[8], LOW);

 break;

 case 6:

  digitalWrite(7, HIGH);

  digitalWrite(pinArray6[8], LOW);

 case 7:

  digitalWrite(8, HIGH);

  digitalWrite(pinArray7[8], LOW);

 break;

 case 8:

  digitalWrite(9, HIGH);

  digitalWrite(pinArray8[8], LOW);

 break;

 case 9:

  digitalWrite(10, HIGH);

  digitalWrite(pinArray9[8], LOW);

 }

}

void Layer(int number)

 {

 switch (number) 

 {

 case 1:

  digitalWrite(11, HIGH);

  digitalWrite(12, LOW);

  digitalWrite(13, LOW);

 break;

 case 2:

  digitalWrite(12, HIGH);

  digitalWrite(11, LOW);

  digitalWrite(13, LOW);

 break;

 case 3:

  digitalWrite(13, HIGH);

  digitalWrite(12, LOW);

  digitalWrite(11, LOW);

 break;

 case 4:

  digitalWrite(13, HIGH);

  digitalWrite(12, HIGH);

  digitalWrite(11, HIGH);

 break;

 case 12:

  digitalWrite(12, HIGH);

  digitalWrite(11, HIGH);

  digitalWrite(13, LOW);

 break;

 case 13:

  digitalWrite(13, HIGH);

  digitalWrite(12, LOW);

  digitalWrite(11, HIGH);

 break;

 case 23:

  digitalWrite(13, HIGH);

  digitalWrite(12, HIGH);

  digitalWrite(11, LOW);

 }

  randomSeed(analogRead(0));

 }

void loop()

{

 for (int i = 0; i < 250; i++) 

 {

  randNumber = random(1, 9);

  Kolom(randNumber);

  randNumber = random(1, 3);

  Layer(randNumber);

  randNumber = random(10,100);

  delay(randNumber);

 }

  Layer(4);

  for (int i = 0; i < 250; i++) 

 {

  randNumber = random(1, 9);

  Kolom(randNumber);

  randNumber = random(10,100);

  delay(randNumber);

 }

  digitalWrite(pinArray0[9], LOW);

  Layer(1);

 for (count=0;count<8;count++) 

 {

  Led(count);

  delay(timer);

  Led(count + 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

 for (count=8;count>0;count--) 

 {

  Led(count);

  delay(timer);

  Led(count - 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

  Layer(2);

 for (count=0;count<8;count++) 

 {

  Led(count);

  delay(timer);

  Led(count + 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

 for (count=8;count>0;count--) 

 {

  Led(count);

  delay(timer);

  Led(count - 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

  Layer(3);

 for (count=0;count<8;count++) 

 {

  Led(count);

  delay(timer);

  Led(count + 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

 for (count=8;count>0;count--) 

 {

  Led(count);

  delay(timer);

  Led(count - 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

  Layer(12);

 for (count=0;count<8;count++) 

 {

  Led(count);

  delay(timer);

  Led(count + 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

 for (count=8;count>0;count--) 

 {

  Led(count);

  delay(timer);

  Led(count - 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

  Layer(13);

 for (count=0;count<8;count++) 

 {

  Led(count);

  delay(timer);

  Led(count + 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

 for (count=8;count>0;count--) 

 {

  Led(count);

  delay(timer);

  Led(count - 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

  Layer(23);

 for (count=0;count<8;count++) 

 {

  Led(count);

  delay(timer);

  Led(count + 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

 for (count=8;count>0;count--) 

 {

  Led(count);

  delay(timer);

  Led(count - 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

  Layer(4);

 for (count=0;count<8;count++) 

 {

  Led(count);

  delay(timer);

  Led(count + 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

 for (count=8;count>0;count--) 

 {

  Led(count);

  delay(timer);

  Led(count - 1);

  delay(timer);

  Led(count);

  delay(timer*2);

 }

}

  
